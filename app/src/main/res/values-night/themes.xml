<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteMe" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- FontFamily -->
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>

        <!-- Icons -->
        <item name="android:drawableTint">@color/white</item>

        <!-- Alert -->
        <item name="android:alertDialogStyle">@style/Theme.AppCompat.DayNight</item>

        <!-- Aplicando estilo para recyclerView -->
        <item name="recyclerViewStyle">@style/Theme.NoteMe.RVN</item>

        <!-- Aplicando estilo al ScrollView -->
        <item name="android:scrollViewStyle">@style/Theme.NoteMe.SVN</item>

        <!-- Estilo para alert dialog -->
        <item name="android:alertDialogTheme">@style/Theme.NoteMe.ADSN</item>
    </style>

    <!-- Estilo para el recycleView -->
    <style name="Theme.NoteMe.RVN">

        <item name="android:background">@color/black</item>

    </style>

    <!-- Estilo para el ScrollView -->
    <style name="Theme.NoteMe.SVN">

        <item name="android:background">@color/black</item>

    </style>

    <!-- Estilo para el alert dialog -->
    <style name="Theme.NoteMe.ADSN" parent="Theme.MaterialComponents.Light.Dialog.Alert">

        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>

    </style>

</resources>