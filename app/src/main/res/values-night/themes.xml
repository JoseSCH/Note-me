<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteMe" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- FontFamily -->
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>

        <!-- Icons -->
        <item name="android:drawableTint">@color/white</item>

        <!-- Alert -->
        <item name="android:alertDialogStyle">@style/Theme.AppCompat.DayNight</item>
        <!-- Aplicando estilo para recyclerView -->
        <item name="recyclerViewStyle">@style/Theme.NoteMe.RVN</item>
    </style>

    <!-- Estilo para el recycleView -->
    <style name="Theme.NoteMe.RVN">

        <item name="android:background">@color/black</item>

    </style>

</resources>