<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteMe" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- FontFamily -->
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>

        <!-- Alert -->
        <item name="android:alertDialogStyle">@style/Theme.AppCompat.DayNight</item>

        <!-- Aplicando estilo para recyclerView -->
        <item name="recyclerViewStyle">@style/Theme.NoteMe.RVD</item>

        <!-- Aplicando estilo al ScrollView -->
        <item name="android:scrollViewStyle">@style/Theme.NoteMe.SVD</item>

        <!-- Estilo para alert dialog -->
        <item name="android:alertDialogTheme">@style/Theme.NoteMe.ADSD</item>
    </style>

    <!-- Estilo para el recycleView -->
    <style name="Theme.NoteMe.RVD">

        <item name="android:background">@color/white</item>

    </style>

    <!-- Estilo para el ScrollView -->
    <style name="Theme.NoteMe.SVD">

        <item name="android:background">@color/white</item>

    </style>

    <!-- Estilo para el alert dialog -->
    <style name="Theme.NoteMe.ADSD" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">

        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>

    </style>

</resources>